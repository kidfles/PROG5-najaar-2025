@model FestivalConfigurator.Web.Models.FestivalFormViewModel

@{
    ViewData["Title"] = "Nieuw festival";
}

<h1>Nieuw festival</h1>

<div class="row">
    <div class="col-lg-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Place" class="form-label"></label>
                <input asp-for="Place" class="form-control" />
                <span asp-validation-for="Place" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LogoFile" class="form-label"></label>
                <input asp-for="LogoFile" type="file" accept="image/png" class="form-control" />
                <span class="form-text">Upload een PNG-bestand. Het logo wordt automatisch opgeslagen in de map \"img/logos\".</span>
                <span asp-validation-for="LogoFile" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="BasicPrice" class="form-label"></label>
                    <input asp-for="BasicPrice" class="form-control" />
                    <span asp-validation-for="BasicPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" type="date" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="EndDate" class="form-label"></label>
                    <input asp-for="EndDate" type="date" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Opslaan</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Terug</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
