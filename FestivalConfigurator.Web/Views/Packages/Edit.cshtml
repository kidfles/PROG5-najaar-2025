@model FestivalConfigurator.Domain.Package

@{
    ViewData["Title"] = "Pakket bewerken";
}

<h1>Pakket bewerken</h1>

<div class="row">
    <div class="col-lg-5">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="FestivalId" class="form-label"></label>
                <select asp-for="FestivalId" class="form-select" asp-items="ViewBag.FestivalId">
                    <option value="" @(Model.FestivalId <= 0 ? "selected" : null)>Selecteer een festival...</option>
                </select>
                <span asp-validation-for="FestivalId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Opslaan</button>
                <a asp-action="Index" asp-route-festivalId="@Model.FestivalId" class="btn btn-secondary">Terug</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
