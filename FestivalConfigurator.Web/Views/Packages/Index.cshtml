@model IEnumerable<FestivalConfigurator.Domain.Package>

@{
    ViewData["Title"] = "Index";
}

<h1>Pakketten</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Nieuw</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Festival)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Festival.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Bewerken</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Verwijderen</a> |
                <a class="btn btn-sm btn-success" asp-action="Ticket" asp-route-id="@item.Id">Ticket</a>
            </td>
        </tr>
}
    </tbody>
</table>
